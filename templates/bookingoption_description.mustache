{{!
    @template mod_booking/bookingoption_description

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}
{{#booknowbutton}}
    <div class="float-right">
        <div>
            {{{.}}}
        </div>
    </div>
{{/booknowbutton}}
<h4>{{#titleprefix}}{{.}} - {{/titleprefix}}{{title}}</h4>
{{#invisible}}
<div class="booking-option-info-invisible">{{#str}} invisibleoption, mod_booking {{/str}}</div>
{{/invisible}}
{{#imageurl}}<img src="{{{.}}}" class="img-fluid"/>{{/imageurl}}
{{#dayofweektime}}
    <div class="bo_dayofweektime">
        {{#str}}dayofweektime, mod_booking{{/str}}: {{.}}
        {{#unitstring}}<span class="bo_unitstring"> ({{.}})</span>{{/unitstring}}
    </div>
{{/dayofweektime}}
{{#location}}<div class="bo_location">{{#str}}location, mod_booking{{/str}}: {{{.}}}</div>{{/location}}
{{#institution}}<div class="bo_institution">{{#str}}institution, mod_booking{{/str}}: {{.}}</div>{{/institution}}
{{#address}}<div class="bo_address">{{#str}}address, mod_booking{{/str}}: {{.}}</div>{{/address}}
{{#duration}}<div class="bo_duration">{{#str}}bookingduration, mod_booking{{/str}}: {{.}}</div>{{/duration}}
{{#statusdescription}}<div class="bo_statusdescription"><p>{{{.}}}</p></div>{{/statusdescription}}
{{#description}}<div class="bo_description"><p>{{{.}}}</p></div>{{/description}}
{{#price}}<div class="bo_price">{{.}} {{currency}} {{pricecategoryname}}</div>{{/price}}
{{> mod_booking/bookingoption_description_teachers }}
